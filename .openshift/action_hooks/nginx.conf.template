worker_processes 4;

events {
  worker_connections 1024;
}

http {
  listen        $OPENSHIFT_IP:$OPENSHIFT_PORT;
  server_name   localhost;
  include       mime.types;
  default_type  application/octet-stream;

  gzip              on;
  sendfile          on;
  keepalive_timeout 65;

  server {
    listen 80;

    location /static/ {
      root $OPENSHIFT_REPO_DIR;
    }

    location / {
      proxy_pass http://unix:/$OPENSHIFT_TMP_DIR/gunicorn.socket;
    }
  }
}

